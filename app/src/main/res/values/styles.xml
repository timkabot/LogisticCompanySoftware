<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyBoxEditText">
        <item name="android:background">@color/mapbox_blue</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="ActivityWithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mapbox_blue</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:buttonStyle">@style/Button.Red.AppCompat</item>
        <item name="colorControlNormal">@color/alfa_divider</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AlertDialogStyle" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/t_light_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/bkg_gray_light</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeAlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="TextLabelStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/t_light_secondary</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/t_light_secondary</item>
    </style>

    <style name="AlertDialogTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/accent_yellow</item>
    </style>

    <style name="NegativeAlertDialogButtonStyle" parent="AlertDialogButtonStyle">
        <item name="android:textColor">@color/t_light_secondary</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/t_light_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Red.AppCompat" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_red</item>
        <item name="colorAccent">@color/primary_red</item>
        <item name="android:textColor">@color/s_color_white_state_enabled</item>
    </style>

</resources>
